simplified_ui false

layout {
    tab name="üåê" split_direction="vertical" {
        pane {
            command "qutebrowser"
        }
        pane {
            command "hx"
            args "README.md"
        }
    }
    tab name="journal" split_direction="vertical" {
        pane {
            command "fish"
            args "-c" "zellij_home"
        }
    }

    default_tab_template {
        pane size=1 borderless=true {
            plugin location="https://github.com/dj95/zjstatus/releases/latest/download/zjstatus.wasm" {
                format_center "{tabs}"
                format_right  " {mode} "

                mode_locked        "#[bg=red,fg=white,bold] ÔÄ£ LOCKED "
                mode_pane          "#[bg=blue,fg=white,bold] Û∞ñØ PANE "
                mode_rename_pane   "#[bg=blue,fg=white,bold] ÔÅÑ RENAME_PANE "
                mode_tab           "#[bg=blue,fg=white,bold] Ôãí TAB "
                mode_rename_tab    "#[bg=blue,fg=white,bold] ÔÅÑ RENAME_TAB "
                mode_session       "#[bg=cyan,fg=white,bold] ÔÉé SESSION "
                mode_scroll        "#[bg=magenta,fg=white,bold] ÔÖ∂ SCROLL "
                mode_enter_search  "#[bg=magenta,fg=white,bold] ÔÄÇ ENTER_SEARCH " 
                mode_search        "#[bg=magenta,fg=white,bold] ÔÄÇ SEARCH "
                mode_resize        "#[bg=yellow,fg=black,bold] ÔÅ• RESIZE "
                mode_move          "#[bg=yellow,fg=black,bold] ÔÇ≤ MOVE "
                mode_prompt        "#[bg=green,fg=white,bold] ÔÑ† PROMPT "
                mode_tmux          "#[bg=green,fg=white,bold] TMUX "
                
                tab_normal "#[fg=white] ‚óá  {name} "
                tab_active "#[fg=159,bold] ‚óÜ  {name} "
            }
        }
        children
    }

    new_tab_template hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="https://github.com/dj95/zjstatus/releases/latest/download/zjstatus.wasm" {
                format_center "{tabs}"
                format_right  " {mode} "

                mode_locked        "#[bg=red,fg=white,bold] ÔÄ£ LOCKED "
                mode_pane          "#[bg=blue,fg=white,bold] Û∞ñØ PANE "
                mode_rename_pane   "#[bg=blue,fg=white,bold] ÔÅÑ RENAME_PANE "
                mode_tab           "#[bg=blue,fg=white,bold] Ôãí TAB "
                mode_rename_tab    "#[bg=blue,fg=white,bold] ÔÅÑ RENAME_TAB "
                mode_session       "#[bg=cyan,fg=white,bold] ÔÉé SESSION "
                mode_scroll        "#[bg=magenta,fg=white,bold] ÔÖ∂ SCROLL "
                mode_enter_search  "#[bg=magenta,fg=white,bold] ÔÄÇ ENTER_SEARCH " 
                mode_search        "#[bg=magenta,fg=white,bold] ÔÄÇ SEARCH "
                mode_resize        "#[bg=yellow,fg=black,bold] ÔÅ• RESIZE "
                mode_move          "#[bg=yellow,fg=black,bold] ÔÇ≤ MOVE "
                mode_prompt        "#[bg=green,fg=white,bold] ÔÑ† PROMPT "
                mode_tmux          "#[bg=green,fg=white,bold] TMUX "

                tab_normal "#[fg=white] ‚óá  {name} "
                tab_active "#[fg=159,bold] ‚óÜ  {name} "
            }
        }
        pane {
            command "env"
            args "YAZI=true" "fish" 
        }
    }
  

    swap_floating_layout {
        floating_panes exact_panes=1 {
            pane x="60%" y="95%" width="40%" height="95%"
        }
    }
}

